@model YunKe.Commerce.SiteTemplates.Dtos.SiteTemplateDto

@{
    var ctrl = Request.RequestContext.RouteData.DataTokens["controller"] as string;

    ViewBag.Title = "添加网站模板";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewBag.Title</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("Add", ctrl, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Name)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.Color)：</label>
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Color, new { @class = "form-control required", })
                        @Html.ValidationMessageFor(m => m.Color)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Description)：</label>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.Description)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Industry)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Industry, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.Industry)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.CoverImage)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.CoverImage, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.CoverImage)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Images)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Images, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.Images)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.TemplateFileUrl)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.TemplateFileUrl, new { @class = "form-control required" })
                        @Html.ValidationMessageFor(m => m.TemplateFileUrl)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Sequence)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Sequence, new { @class = "form-control", placeholder = "排序" })
                        @Html.ValidationMessageFor(m => m.Sequence)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button class="btn btn-info" type="submit">保存</button>
                        <button class="btn btn-white" type="button" id="btnBack">返回</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/content/js/jqueryValidate")
    <script>
        $("#btnBack").bind("click", function(e) {
            XPage.GoTo(e.target, "@Url.Action("Index")");
        });
    </script>
}
